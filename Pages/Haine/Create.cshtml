@page
@model Coste_Florina_Proiect.Pages.Haine.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Clothes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Clothes.Name" class="control-label"></label>
                <input asp-for="Clothes.Name" class="form-control" />
                <span asp-validation-for="Clothes.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clothes.Size" class="control-label"></label>
                <input asp-for="Clothes.Size" class="form-control" />
                <span asp-validation-for="Clothes.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clothes.Price" class="control-label"></label>
                <input asp-for="Clothes.Price" class="form-control" />
                <span asp-validation-for="Clothes.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clothes.DateOfAppearance" class="control-label"></label>
                <input asp-for="Clothes.DateOfAppearance" class="form-control" />
                <span asp-validation-for="Clothes.DateOfAppearance" class="text-danger"></span>
            </div>
            <label asp-for="Clothes.BrandID" class="control-label"> Brand Name </label>
            <select asp-for="Clothes.BrandID" class="form-control" asp-items="ViewBag.BrandID">
            </select>
            <span asp-validation-for="Clothes.BrandID" class="text-danger"></span>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cat in Model.AssignedCategoryDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedCourses"
                                               value="@cat.CategoryID"
                                               @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                                        @cat.CategoryID @: @cat.Name
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts { 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
